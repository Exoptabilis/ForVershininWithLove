@model IEnumerable<Kyrsach.Models.Article>
@using Kyrsach.Controllers

<p>
    @Html.ActionLink("Добавить новую статью", "Create")
    @using (Html.BeginForm())
    {
        <p>
            Название статьи:  @Html.TextBox("nazvanie")
            <br />
            <input type="submit" value="Найти статью" />
        </p>
    }
</p>
<table>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.IdArticle)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.thema)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.dataAdd)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.idUser)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td> 
            @Html.DisplayFor(modelItem => item.IdArticle)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.thema)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.dataAdd)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.idUser)
        </td>
        <td>
            @Html.ActionLink("Изменить", "Edit", new {  id=item.IdArticle  }) |
            @Html.ActionLink("Просмотреть", "Details", new {  id=item.IdArticle   }) |
            @Html.ActionLink("Удалить", "Delete", new {  id=item.IdArticle   })
        </td>
    </tr>
}

</table>
